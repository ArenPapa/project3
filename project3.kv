<RemoveItemScreen>:
    name: "RemoveItemScreen"
    FloatLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1  # White background
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: "Remove Item"
            font_size: "36sp"
            bold: True
            color: (0.0, 0.0, 0.5, 1)  # Dark navy blue
            pos_hint: {"center_x": 0.5, "top": 1.40}

        Label:
            id: remove_item_label
            text: "Selected item to remove: None"
            font_size: "20sp"
            color: (0, 0, 0, 1)  # Black text
            pos_hint: {"center_x": 0.5, "top": 0.85}
            size_hint_y: None

        ScrollView:
            size_hint: (0.75, 0.6)  # Adjusted height for spacing
            pos_hint: {"center_x": 0.5, "center_y": 0.4}
            GridLayout:
                id: menu_grid
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                row_default_height: 150  # Increased height for spaciousness
                row_force_default: True

        BoxLayout:
            size_hint: (0.5, 0.08)
            pos_hint: {"center_x": 0.5, "bottom": 0.05}
            spacing: 20

            Button:
                id: confirm_remove_btn
                text: "Confirm Remove"
                background_normal: ""  
                background_color: 0, 0, 0, 0
                on_press: root.confirm_remove_action()
                disabled: True  # Initially disabled
                canvas.before:
                    Color:
                        rgba: (1, 0, 0, 1)  # Red color
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [50, 50, 50, 50]

            Button:
                text: "Back to Admin"
                size_hint_x: 1
                background_normal: ""  
                background_color: 0, 0, 0, 0  # Make button itself transparent so we see RoundedRectangle
                on_press: app.root.current = "AdminScreen"
                canvas.before:
