<SplashScreen>:
    name: "splash"
    FloatLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Image:
            source: "logo.png"
            size_hint: (0.3, 0.3)
            pos_hint: {"center_x": 0.5, "center_y": 0.6}
        Label:
            text: "Welcome to MyApp"
            font_size: "32sp"
            color: (0, 0, 0, 1)
            pos_hint: {"center_x": 0.5, "center_y": 0.4}
        Button:
            text: "Continue"
            size_hint: (0.3, 0.08)
            pos_hint: {"center_x": 0.5, "center_y": 0.2}
            background_color: (0, 0, 1, 1)
            border: (20, 20, 20, 20)
            on_press: app.root.current = "login"

<LoginScreen>:
    name: "login"
    FloatLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: "Login"
            font_size: "30sp"
            color: (0, 0, 0, 1)
            pos_hint: {"center_x": 0.5, "center_y": 0.85}

        TextInput:
            id: username
            hint_text: "Username"
            size_hint: (0.5, 0.07)
            pos_hint: {"center_x": 0.5, "center_y": 0.7}
            background_color: (0, 0, 0, 0)
            canvas.before:
                Color:
                    rgba: 0, 0, 0.5, 1
                Line:
                    width: 1.5
                    rounded_rectangle: (self.x, self.y, self.width, self.height, 20)

        TextInput:
            id: password
            hint_text: "Password"
            password: True
            size_hint: (0.5, 0.07)
            pos_hint: {"center_x": 0.5, "center_y": 0.6}
            background_color: (0, 0, 0, 0)
            canvas.before:
                Color:
                    rgba: 0, 0, 0.5, 1
                Line:
                    width: 1.5
                    rounded_rectangle: (self.x, self.y, self.width, self.height, 20)

        Button:
            text: "Login"
            size_hint: (0.5, 0.08)
            pos_hint: {"center_x": 0.5, "center_y": 0.4}
            background_normal: ""  
            background_color: 0, 0, 0, 0
            border: (20, 20, 20, 20)
            on_press: root.login_user()

            canvas.before:
                Color:
                    rgba: (0.5, 0.5, 1, 1)  # Light blue color
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [50, 50, 50, 50]  # Adjust for more or less rounded corners

        Button:
            text: "Go to Register"
            size_hint: (0.5, 0.08)
            pos_hint: {"center_x": 0.5, "center_y": 0.3}
            background_normal: ""  
            background_color: 0, 0, 0, 0
            border: (20, 20, 20, 20)
            on_press: app.root.current = "register"

            canvas.before:
                Color:
                    rgba: (0.5, 0.5, 1, 1)  # Light blue color
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [50, 50, 50, 50]

